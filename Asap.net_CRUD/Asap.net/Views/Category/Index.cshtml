@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle">Create New Product</i>
            </a>
        </div>
    </div>
    <br /> <br />
</div>
<table class="table tableborder tabletable-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Time
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.DisplayOrder
                </td>
                <td width="50%">
                    @obj.CreatedDateTime
                </td>
                <td width="50%">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pen"></i>Edit</a>
                </td>
                <td width="50%">
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3-fill"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
